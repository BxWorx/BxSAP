			Friend Function ToggleView()	As Boolean _
									Implements ixProcessOptionsVM.ToggleView

				Dim lb_Ret	As Boolean	= False

				If Me.ViewActive
				Else
					Dim lo_MonitorView	As ixProcessOptionsView	= New xProcessOptionsView(Me)
