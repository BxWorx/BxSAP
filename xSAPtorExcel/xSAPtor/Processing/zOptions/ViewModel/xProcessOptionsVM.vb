			Private	Sub	NotifySaved()

				Dim lo_NotifyDTO	= Me.co_NotifyDTO.Clone()

				lo_NotifyDTO.Text	= "Processing: Options saved"

				RaiseEvent ev_Notification(lo_NotifyDTO)

			End Sub
