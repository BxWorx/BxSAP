			Friend Function FetchOptions() _
												As ixProcessOptionsDTO _
													Implements ixProcessOptionsVM.FetchOptions

				Me.co_DTOKeep	= Me.co_Model.FetchOptions()

				Return Me.co_DTOKeep.ShallowCopy()

			End Function
			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Friend Function SaveOptions(ByVal i_Options As ixProcessOptionsDTO) _
												As Boolean _
													Implements ixProcessOptionsVM.SaveOptions

				Dim lb_Ret  As Boolean

				Try

						If	Me.co_DTOKeep.ParallelProcessesTran <> i_Options.ParallelProcessesTran	OrElse
								Me.co_DTOKeep.ParallelProcessesWB		<> i_Options.ParallelProcessesWB		OrElse
								Me.co_DTOKeep.RunMonitorAutoStart		<> i_Options.RunMonitorAutoStart		OrElse
								Me.co_DTOKeep.RunMonitorRefreshRate	<> i_Options.RunMonitorRefreshRate

							If Me.co_Model.SaveOptions(i_Options)

								Me.co_DTOKeep	= i_Options.ShallowCopy()
								Me.NotifySaved()

							End If

						End If

						lb_Ret  = True

					Catch ex As Exception
						lb_Ret  = False
							
				End Try

				Return lb_Ret

			End Function

