			Friend Sub New(ByRef controller	As iBxSProcessController)

				Me.co_Model					= controller.GetOptionModel()
				Me.co_NotifyDTO			= controller.GetNotifyDTO()
				Me.co_DTOKeep				= Nothing
				Me.co_SubStartStop	= so_MsgHub.Value.Subscribe(Of sMsgStartupShutdown)	(AddressOf	Me.MsgHndlr_StartupShutdown, True)

			End Sub

