			Private Sub mh_SAPSysSelected(ByVal _msg As iLogonSystemDTO)

				Dim	lo_DTO	= Me.CreateDTO()

				lo_DTO.SeqNo			= 1
				lo_DTO.RfcDestID	= _msg.DestinationID
				lo_DTO.Language		= _msg.Language
				lo_DTO.Client			= _msg.Client
				lo_DTO.User				= _msg.UserName
				lo_DTO.Password		= _msg.Password
				lo_DTO.SystemID		= _msg.SystemID
				'..................................................
				If Me.Register(lo_DTO)
					so_MsgHub.Value.Publish(New sMsgSAPFavUpd(lo_DTO))
				End If

