		Friend	Sub UpdatedData(ByRef	DTO	As iLogonOptionsDTO)

			DTO.DefaultLanguage			= Me.xtbx_DefLang.Text.Trim.ToUpper()
			DTO.AutoSave						= Me.xchb_AutoSave.Checked
			DTO.ShowPassword				= Me.xchb_HidePassword.Checked
			DTO.SavePassword				= Me.xchb_SavePWrds.Checked

			DTO.AutoConnect					= Me.xchb_AutoConnect.Checked
