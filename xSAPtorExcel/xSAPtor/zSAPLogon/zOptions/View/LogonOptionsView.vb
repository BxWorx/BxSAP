		Friend	Sub	LoadData(ByVal DTO	As iLogonOptionsDTO)

			Me.xtbx_DefLang.Text								= DTO.DefaultLanguage.ToUpper()
			Me.xchb_AutoSave.Checked						= DTO.AutoSave
			Me.xchb_HidePassword.Checked				= DTO.ShowPassword
			Me.xchb_SavePWrds.Checked						= DTO.SavePassword
			Me.xchb_AutoConnect.Checked					= DTO.AutoConnect
