			Friend	Function	GetConnection(ByVal	id	As String)	As BxSDestRepos_ConnectionDTO	_
														Implements iBxSDestRepository.GetConnection

				Dim lo_DTO	= New	BxSDestRepos_ConnectionDTO

				Me.co_DestCont.ConnectionList.TryGetValue(id, lo_DTO)

				Return	lo_DTO

			End Function
			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Friend	Function	ModifyConnection(ByVal	DTO	As BxSDestRepos_ConnectionDTO)	As Boolean	_
														Implements iBxSDestRepository.ModifyConnection

				Dim	lb_Ret	= True

				If Me.co_DestCont.ConnectionList.ContainsKey(DTO.ID)
					Me.co_DestCont.ConnectionList(DTO.ID)	= DTO
				Else
					Me.co_DestCont.ConnectionList.Add(DTO.ID, DTO)
				End If

				Return	lb_Ret

			End Function
			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Friend	Function	RemoveConnection(ByVal	id	As String)	As Boolean	_
														Implements iBxSDestRepository.RemoveConnection

				Dim	lb_Ret	= True

				If Me.co_DestCont.ConnectionList.ContainsKey(id)
					lb_Ret	= Me.co_DestCont.ConnectionList.Remove(id)
				End If

				Return	lb_Ret

			End Function
