			Friend Sub Register(destinationConfiguration As iBxSDestinationConfiguration) _
									Implements iBxSDestinationController.Register

				If SAPNCO.RfcDestinationManager.IsDestinationConfigurationRegistered()
					Me.UnRegister()
				End If
				'............................................................
				Me.co_DestCfg	= destinationConfiguration
				
				Try

						SAPNCO.RfcDestinationManager.RegisterDestinationConfiguration(config:=Me.co_DestCfg)

					Catch ex As Exception _
						When			TypeOf	ex Is SAPNCO.RfcInvalidStateException _
							OrElse	TypeOf	ex Is SAPNCO.RfcInvalidParameterException

				End Try

			End Sub
			'¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯
			Friend Sub UnRegister() _
									Implements iBxSDestinationController.UnRegister
				
				If SAPNCO.RfcDestinationManager.IsDestinationConfigurationRegistered()

					Try

							SAPNCO.RfcDestinationManager.UnregisterDestinationConfiguration(config:=Me.co_DestCfg)

						Catch ex As Exception _
							When			TypeOf	ex Is SAPNCO.RfcInvalidStateException _
								OrElse	TypeOf	ex Is SAPNCO.RfcInvalidParameterException

					End Try

				End If

			End Sub

