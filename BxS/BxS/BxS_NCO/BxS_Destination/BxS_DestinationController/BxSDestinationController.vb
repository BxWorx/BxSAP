			Friend Function CreateDestinationConfig_FromSAPIni(ByRef SAPLogonIni	As SAPNCO.SapLogonIniConfiguration)	_
												As iBxSDestinationConfiguration	_
													Implements iBxSDestinationController.CreateDestinationConfig_FromSAPIni

				Dim lo_DestCfg	As iBxSDestinationConfiguration	= New BxSDestinationConfiguration

				For Each lc_ID As String In SAPLogonIni.GetEntries()

					Dim lo_RfcCnfg	As SAPNCO.RfcConfigParameters	= SAPLogonIni.GetParameters(lc_ID)

					If lo_DestCfg.AddDestinationConfig(rfcDestID:=lc_ID, rfcCfgParameters:=lo_RfcCnfg)
					End If

				Next

				Return lo_DestCfg

			End Function
